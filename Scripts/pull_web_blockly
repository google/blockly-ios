mkdir temp
pushd temp
wget https://raw.githubusercontent.com/google/blockly/master/blockly_compressed.js
wget https://raw.githubusercontent.com/google/blockly/master/javascript_compressed.js
mkdir msg
mkdir msg/js
pushd msg/js
wget https://raw.githubusercontent.com/google/blockly/master/msg/js/en.js
popd
cp -R ./* ../../Samples/BlocklyCodeLab/BlocklyCodeLab/Resources/Non-Localized/blockly_web
cp -R ./* ../../Samples/BlocklyCodeLab-Starter/BlocklyCodeLab-Starter/Resources/Non-Localized/blockly_web
cp -R ./* ../../Samples/BlocklySample/BlocklySample/Resources/Non-Localized/Turtle/blockly_web
wget https://raw.githubusercontent.com/google/blockly/master/python_compressed.js
cp -R ./* ../../Samples/Tests/Resources/blockly_web
popd
rm -rf temp
